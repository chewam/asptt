extends layout

block content
    h1= title

    - data.forEach(function(item, index) {
        div
            - if (item.isDirectory) {
                a(href="#{item.path}") #{item.name}
            - } else if (/.mp4$/i.test(item.name)) {
                div #{item.name}
                video.video-js.vjs-default-skin(id="video_#{index}", controls, preload="auto", width="640", height="360", data-setup="{}")
                    source(src="/#{item.path}", type='video/mp4')
                    source(src="/#{item.pathWebm}", type='video/webm')
            - }
        br
    - });
